@model IEnumerable<Ingredient>

@{
    ViewBag.Title = "Ingredients";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="text-primary">Ingredients</h1>
    <a asp-action="Create" class="btn btn-success">+ Add Ingredient</a>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => i.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@i.IngredientId" class="btn btn-info btn-sm">
                        Details
                    </a>
                    <a asp-action="Edit" asp-route-id="@i.IngredientId" class="btn btn-warning btn-sm">
                        Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@i.IngredientId" class="btn btn-danger btn-sm">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
